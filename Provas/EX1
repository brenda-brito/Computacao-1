#include <stdio.h>
#include <string.h>
#include <stdlib.h>

#define tam 50
#define linha 3 
#define coluna 3 

void MInvertida (char str[])
{
    int x, y;
    int s = strlen(str);
    char n;

    if (strchr("aeiouAEIOU", str[0]))
        {
            x = 0; 
            y = s - 1; 
            while (x < y) 
                {
                    n = str[x];
                    str[x] = str[y];
                    str[y] = n;
                    x++; 
                    y--; 
                }
        }
}

int main ()
{
    int i=0, j=0;
    char matriz [linha][coluna][tam];
    char matriz_original [linha][coluna][tam];

    while (i < 3)
    {
        while (j < 3)
        {
            printf("Digite a string [%d][%d]", i, j);

            fgets(matriz[i][j], tam, stdin);

            matriz[i][j][strcspn(matriz[i][j], "\n")] = '\0';
            
            strcpy(matriz_original[i][j], matriz[i][j]);

            MInvertida(matriz[i][j]);
            
            j++;
        }
        
        i++;
    }

    printf("Matriz invertida:\n");
    i = 0;
    while (i < 3)
    {
        j = 0;
        while (j < 3)
        {
            printf("%s ", matriz[i][j]);
            j++;
        }

        printf("\n");
        i++;
    }
    
    printf("\nMatriz original:\n");
    i = 0;
    while (i < 3)
    {
        j = 0;
        while (j < 3)
        {
            printf("%s ", matriz_original[i][j]);
            j++;
        }

        printf("\n");
        i++;
    }

    return 0;
}
